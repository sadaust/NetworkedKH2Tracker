<Window x:Class="KhTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KhTracker"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        KeyDown="Window_KeyDown"
        Closing="Window_Closing"
        LocationChanged="Window_LocationChanged"
        SizeChanged="Window_SizeChanged"
        AllowDrop="True" Drop="DropFile"
        Title="KH2Tracker" Height="880" Width="570" Background="#303030"
        MinHeight="440" MinWidth="300">

    <Window.Resources>
        <Style TargetType="Image">
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top" Background="White">
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel HorizontalAlignment="Stretch"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <MenuItem Header="Options" Focusable="False">
                <MenuItem Header="Hint Mode">
                    <MenuItem Header="Load JSmartee Hints File" Click="LoadHints"/>
                    <MenuItem Header="Load Pnach Seed (PCSX2 Shan Hints)" Click="ParseSeed"/>
                    <MenuItem Header="Load KH2Randomizer Zip Seed" Click="OpenKHSeed"/>
                </MenuItem>
                <MenuItem Header="Save Progress" Click="SaveProgress"/>
                <MenuItem Header="Load Progress" Click="LoadProgress"/>
                <Separator/>
                <MenuItem Header="Auto Tracking">
                    <MenuItem Header="PCSX2" Click="InitPCSX2Tracker"/>
                    <MenuItem Header="PC" Click="InitPCTracker"/>
                    <MenuItem Name="AutoDetectOption" Header="Auto-Detect" IsCheckable="True" IsChecked="False" Click="AutoDetectToggle"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Broadcast Window" HorizontalAlignment="Left" Click="BroadcastWindow_Open" Width="235"/>
                <MenuItem Name="BroadcastStartupOption" Header="Broadcast Window On Startup" IsCheckable="True" IsChecked="False" Click="BroadcastStartupToggle"/>
                <Separator/>
                <MenuItem Header="Reset Window" Click="ResetSize"/>
                <MenuItem Header="Reset Tracker" Click="OnReset"/>
                <MenuItem Name="TopMostOption" Header="Always on Top" IsCheckable="True" IsChecked="False" Click="TopMostToggle"/>
                <MenuItem Name="DragAndDropOption" Header="Drag and Drop" IsCheckable="True" IsChecked="True" Click="DragDropToggle"/>
                <MenuItem Name="LegacyOption" Header="Legacy STT Magic Tracking" IsCheckable="True" IsChecked="False" Click="LegacyToggle"/>
                <Separator/>
                <MenuItem Name="MultiplayerJoin" Header="Join Multiplayer" Click="JoinServer"/>
                <MenuItem Name="MultiplayerHost" Header="Host Multiplayer" Click="StartServer"/>
            </MenuItem>
            <MenuItem Header="Toggles" Focusable="False">
                <MenuItem Name="PromiseCharmOption" Header="Promise Charm" IsCheckable="True" IsChecked="False" Click="PromiseCharmToggle"/>
                <MenuItem Name="ReportsOption"      Header="Ansem Reports" IsCheckable="True" IsChecked="True" Click="ReportsToggle"/>
                <MenuItem Name="AbilitiesOption"    Header="Once More / Second Chance" IsCheckable="True" IsChecked="True" Click="AbilitiesToggle"/>
                <MenuItem Name="AntiFormOption"     Header="Anti Form" IsCheckable="True" IsChecked="False" Click="AntiFormToggle"/>
                <MenuItem Name="ExtraChecksOption"  Header="Extra Important Checks" IsCheckable="True" IsChecked="False" Click="ExtraChecksToggle"/>
                <!--MenuItem Name="TornPagesOption"    Header="Torn Pages" IsCheckable="True" IsChecked="True" Click="TornPagesToggle"/-->
                <!--MenuItem Name="CureOption"         Header="Cure" IsCheckable="True" IsChecked="True" Click="CureToggle"/-->
                <!--MenuItem Name="FinalFormOption"    Header="Final Form" IsCheckable="True" IsChecked="True" Click="FinalFormToggle"/-->
                <!--MenuItem Name="HadesCupOption"  Header="Hades Cup Trophy" IsCheckable="True" IsChecked="False" Click="HadesCupToggle"/-->
                <MenuItem Name="VisitLockOption"    Header="World Progression Items" IsCheckable="True" IsChecked="False" Click="VisitLockToggle"/>
                <Separator/>
                <MenuItem Name="SeedHashOption"         Header="Show Zip Seed Hash" IsCheckable="True" IsChecked="True" Click="SeedHashToggle"/>
                <MenuItem Name="WorldProgressOption" 	Header="World Progression Icons" IsCheckable="True" IsChecked="True" Click="WorldProgressToggle"/>
                <MenuItem Name="FormsGrowthOption"   	Header="Forms and Growth Abilities" IsCheckable="True" IsChecked="True" Click="FormsGrowthToggle"/>
                <MenuItem Name="BroadcastGrowthOption"  Header="Broadcast Window Growth Abilities" IsCheckable="True" IsChecked="False" Click="BroadcastGrowthToggle"/>
                <MenuItem Name="BroadcastStatsOption"   Header="Broadcast Window Player Stats" IsCheckable="True" IsChecked="False" Click="BroadcastStatsToggle"/>
                <Separator/>
                <MenuItem Name="GhostItemOption"   	    Header="Track Ghost Items (Points Mode)" IsCheckable="True" IsChecked="True" Click="GhostItemToggle"/>
                <MenuItem Name="GhostMathOption"   	    Header="Ghost Item Auto-Math (Points Mode)" IsCheckable="True" IsChecked="True" Click="GhostMathToggle"/>
                <MenuItem Name="CheckCountOption"  	    Header="Show Check Count (Points Mode)" IsCheckable="True" IsChecked="False" Click="ShowCheckCountToggle"/>
                <Separator/>
                <MenuItem Name="NextLevelCheckOption" Header="Show Next Level Check" IsCheckable="True" IsChecked="False" Click="NextLevelCheckToggle"/>
                <MenuItem Name="DeathCounterOption"   Header="Show Death Counter" IsCheckable="True" IsChecked="False" Click="DeathCounterToggle"/>
            </MenuItem>
            <MenuItem Header="Worlds" Focusable="False">
                <MenuItem Name="SoraHeartOption"        Header="Sora's Heart" IsCheckable="True" IsChecked="True" Click="SoraHeartToggle"/>
                <MenuItem Name="SoraLevel01Option" 		Header="Level 1 Checks" IsCheckable="True" IsChecked="False" Click="SoraLevel01Toggle"/>
                <MenuItem Name="SoraLevel50Option" 		Header="Level 50 Checks" IsCheckable="True" IsChecked="True" Click="SoraLevel50Toggle"/>
                <MenuItem Name="SoraLevel99Option" 		Header="Level 99 Checks" IsCheckable="True" IsChecked="False" Click="SoraLevel99Toggle"/>
                <Separator/>
                <MenuItem Name="DriveTrackOption"       Header="Drive Unlocks" IsCheckable="True" IsChecked="True" Click="DriveTrackToggle"/>
                <MenuItem Name="SimulatedOption"        Header="Simulated Twilight Town" IsCheckable="True" IsChecked="True" Click="SimulatedToggle"/>
                <MenuItem Name="HundredAcreWoodOption"  Header="100 Acre Wood" IsCheckable="True" IsChecked="True" Click="HundredAcreWoodToggle"/>
                <MenuItem Name="AtlanticaOption"        Header="Atlantica" IsCheckable="True" IsChecked="False" Click="AtlanticaToggle"/>
                <MenuItem Name="SynthOption"            Header="Synthesis" IsCheckable="True" IsChecked="False" Click="SynthToggle"/>
                <MenuItem Name="PuzzleOption"           Header="Puzzles" IsCheckable="True" IsChecked="False" Click="PuzzleToggle"/>
                <Separator/>
                <MenuItem Name="TerraOption" 		    Header="Lingering Will" IsCheckable="True" IsChecked="False" Click="TerraToggle"/>
                <MenuItem Name="CavernOption" 			Header="Cavern of Rememberance" IsCheckable="True" IsChecked="False" Click="CavernToggle"/>
                <MenuItem Name="OCCupsOption" 		    Header="Olympus Cups" IsCheckable="True" IsChecked="False" Click="OCCupsToggle"/>
            </MenuItem>
            <MenuItem Header="Visuals" Focusable="False">
                <MenuItem Name="MinWorldOption" Header="Simple World Icons" IsCheckable="True" IsChecked="True"  Click="MinWorldToggle"/>
                <MenuItem Name="OldWorldOption" Header="Game World Icons" 	IsCheckable="True" IsChecked="False" Click="OldWorldToggle"/>
                <Separator/>
                <MenuItem Name="MinCheckOption" Header="Simple Check Icons" IsCheckable="True" IsChecked="True" Click="MinCheckToggle"/>
                <MenuItem Name="OldCheckOption" Header="Game Check Icons" 	IsCheckable="True" IsChecked="False" Click="OldCheckToggle"/>
                <Separator/>
                <MenuItem Name="MinProgOption" Header="Simple Progression Icons" IsCheckable="True" IsChecked="True"  Click="MinProgToggle"/>
                <MenuItem Name="OldProgOption" Header="Game Progression Icons" 	 IsCheckable="True" IsChecked="False" Click="OldProgToggle"/>
                <Separator/>
                <MenuItem Name="MinNumOption" Header="Kh2 Number Icons" IsCheckable="True" IsChecked="True"  Click="MinNumToggle"/>
                <MenuItem Name="OldNumOption" Header="Classic Number Icons"	 IsCheckable="True" IsChecked="False" Click="OldNumToggle"/>
                <Separator/>
                <MenuItem Name="CustomFolderOption" Header="Load Custom Icons" IsCheckable="True" IsChecked="False" Click="CustomImageToggle"/>
                <Separator/>
                <MenuItem Header="Main Window Background">
                    <MenuItem Name="MainDefOption" Header="Default" IsCheckable="True" IsChecked="True"  Click="MainBG_DefToggle"/>
                    <MenuItem Name="MainImg1Option" Header="Custom Image (Stretch)"    IsCheckable="True" IsChecked="False" Click="MainBG_Img1Toggle"/>
                    <MenuItem Name="MainImg2Option" Header="Custom Image (Uniform)"    IsCheckable="True" IsChecked="False" Click="MainBG_Img2Toggle"/>
                    <MenuItem Name="MainImg3Option" Header="Custom Image (No Scaling)" IsCheckable="True" IsChecked="False" Click="MainBG_Img3Toggle"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Broadcast Window Background">
                    <MenuItem Name="BroadcastDefOption" Header="Default" IsCheckable="True" IsChecked="True"  Click="BroadcastBG_DefToggle"/>
                    <MenuItem Name="BroadcastImg1Option" Header="Custom Image (Stretch)"    IsCheckable="True" IsChecked="False" Click="BroadcastBG_Img1Toggle"/>
                    <MenuItem Name="BroadcastImg2Option" Header="Custom Image (Uniform)"    IsCheckable="True" IsChecked="False" Click="BroadcastBG_Img2Toggle"/>
                    <MenuItem Name="BroadcastImg3Option" Header="Custom Image (No Scaling)" IsCheckable="True" IsChecked="False" Click="BroadcastBG_Img3Toggle"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Name="ModeDisplay" Header=" " Focusable="False" IsHitTestVisible="False"/>
            <MenuItem Name="NetworkStatus" Header=" " IsHitTestVisible="False" Focusable="False" FlowDirection="RightToLeft"/>
            <MenuItem Header="-DA 1.6.8d- MP" IsHitTestVisible="False" Focusable="False" HorizontalAlignment="Right" FlowDirection="RightToLeft"/>
        </Menu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="0.9*"/>
                <RowDefinition Name="FormRow" Height="0*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!-- Sora's Heart -->
                    <Grid Name="SorasHeartTop" Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <!-- path width 2.2 -->
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="3.3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <!-- path width 2 -->
                                <ColumnDefinition Width=".1*"/>
                                <ColumnDefinition Width=".3*"/>
                            </Grid.ColumnDefinitions>

                            <Button Name ="SorasHeart" Background="Transparent" PreviewMouseDown="OnMouseDown" MouseWheel="OnMouseWheel" Template="{StaticResource DefaultButton}" FocusVisualStyle="{x:Null}" Grid.RowSpan="2" Grid.ColumnSpan="2">
                                <DynamicResource ResourceKey="Min-SoraHeartImage"/>
                            </Button>

                            <Image Name="SorasHeartCross" Source="Images/Other/crossworld.png" Grid.RowSpan="2" Grid.ColumnSpan="2" Visibility="Collapsed" IsHitTestVisible="False"/>
                            
                            <ContentControl Name="SorasHeartType" Panel.ZIndex="1" IsHitTestVisible="False" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left"/>

                            <Image Name="Weapon" Source="Images/Other/sword.png" Grid.Row="1" Panel.ZIndex="1" IsHitTestVisible="False" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,10,-6" RenderTransformOrigin="0.5,0.5" Visibility="Visible">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>

                            <Grid Name="SorasHeartHint" Grid.Row="1" Grid.ColumnSpan="3" Panel.ZIndex="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.25*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Image Name="SorasHeartHint_100" Source="Images/Numbers/kh2/Yellow/QuestionMark.png" Visibility="Hidden" Grid.Column="1"/>
                                <Image Name="SorasHeartHint_010" Source="Images/Numbers/kh2/Yellow/QuestionMark.png" Visibility="Hidden" Grid.Column="2"/>
                                <Image Name="SorasHeartHint_001" Source="Images/Numbers/kh2/Yellow/QuestionMark.png" Visibility="Visible" Grid.Column="3"/>
                            </Grid>

                            <Grid Name="SorasHeartPath" Grid.RowSpan="2" Grid.Column="3" Visibility="Hidden">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.18*"/>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition/>
                                    <RowDefinition Height="0.18*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Image Name="SorasHeartPath_Con" Source="Images/Checks/Simple/proof_of_connection.png"      Visibility="Visible" Grid.Row="1" VerticalAlignment="Bottom"/>
                                <Image Name="SorasHeartPath_Non" Source="Images/Checks/Simple/proof_of_nonexistence.png"    Visibility="Visible" Grid.Row="2"/>
                                <Image Name="SorasHeartPath_Pea" Source="Images/Checks/Simple/proof_of_tranquility.png"     Visibility="Visible" Grid.Row="3" VerticalAlignment="Top"/>
                            </Grid>

                            <Image Name="SorasHeartBar" Source="Images\VerticalBarWhite.png" Grid.RowSpan="2" Grid.Column="5"/>
                            
                        </Grid>
                        
                        <local:WorldGrid x:Name="SorasHeartGrid" Grid.Column="1"/>
                    </Grid>

                    <!-- Simulated Twilight Town -->
                    <Grid Name="SimulatedTwilightTownTop" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="3.3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width=".1*"/>
                                <ColumnDefinition Width=".3*"/>
                            </Grid.ColumnDefinitions>

                            <Image Name="SimulatedTwilightTownPlus" Source="Images/Other/plus.png" Grid.Row="1" Panel.ZIndex="1" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,5,20,0" Visibility="Hidden">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>

                            <Button Name="SimulatedTwilightTown" Background="Transparent" PreviewMouseDown="OnMouseDown" MouseWheel="OnMouseWheel" Template="{StaticResource DefaultButton}" FocusVisualStyle="{x:Null}" Grid.RowSpan="2" Grid.ColumnSpan="2">
                                <DynamicResource ResourceKey="Min-SimulatedImage"/>
                            </Button>

                            <Image Name="SimulatedTwilightTownCross" Source="Images/Other/crossworld.png" Grid.RowSpan="2" Grid.ColumnSpan="2" Visibility="Collapsed" IsHitTestVisible="False"/>

                            <Grid Name="SimulatedTwilightTownHint" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Panel.ZIndex="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.25*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Image Name="SimulatedTwilightTownHint_100" Source="Images/Numbers/kh2/Yellow/QuestionMark.png" Visibility="Hidden" Grid.Column="1"/>
                                <Image Name="SimulatedTwilightTownHint_010" Source="Images/Numbers/kh2/Yellow/QuestionMark.png" Visibility="Hidden" Grid.Column="2"/>
                                <Image Name="SimulatedTwilightTownHint_001" Source="Images/Numbers/kh2/Yellow/QuestionMark.png" Visibility="Visible" Grid.Column="3"/>
                            </Grid>

                            <ContentControl Name="SimulatedTwilightTownProgression" IsHitTestVisible="False" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>

                            <Grid Name="SimulatedTwilightTownPath" Grid.RowSpan="2" Grid.Column="3" Visibility="Hidden">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.18*"/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition Height="0.18*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Image Name="SimulatedTwilightTownPath_Con" Source="Images/Checks/Simple/proof_of_connection.png"      Visibility="Visible" Grid.Row="1" VerticalAlignment="Bottom"/>
                                <Image Name="SimulatedTwilightTownPath_Non" Source="Images/Checks/Simple/proof_of_nonexistence.png"    Visibility="Visible" Grid.Row="2"/>
                                <Image Name="SimulatedTwilightTownPath_Pea" Source="Images/Checks/Simple/proof_of_tranquility.png"     Visibility="Visible" Grid.Row="3" VerticalAlignment="Top"/>
                            </Grid>

                            <Image Name="SimulatedTwilightTownBar" Source="Images\VerticalBarWhite.png" Grid.RowSpan="2" Grid.Column="4"/>
                        </Grid>
                        <local:WorldGrid x:Name="SimulatedTwilightTownGrid" Grid.Column="1"/>
                    </Grid>

                    <!-- Hollow Bastion -->
                    <Grid Name="HollowBastionTop" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="3.3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width=".1*"/>
                                <ColumnDefinition Width=".3*"/>
                            </Grid.ColumnDefinitions>

                            <Image Name="HollowBastionLock" Source="Images/Other/visitlock.png" Grid.RowSpan="2" Grid.ColumnSpan="2" Panel.ZIndex="1" RenderTransformOrigin="0.5,0.5" IsHitTestVisible="False">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>

                            <Button Name="HollowBastion" Background="Transparent" PreviewMouseDown="OnMouseDown" MouseWheel="OnMouseWheel" Template="{StaticResource DefaultButton}" FocusVisualStyle="{x:Null}" Grid.RowSpan="2" Grid.ColumnSpan="2">
                                <DynamicResource ResourceKey="Min-HollowBastionImage"/>
                            </Button>

                            <Image Name="HollowBastionCross" Source="Images/Other/crossworld.png" Grid.RowSpan="2" Grid.ColumnSpan="2" Visibility="Collapsed" IsHitTestVisible="False"/>

                            <Grid Name="HollowBastionHint" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Panel.ZIndex="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.25*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Image Name="HollowBastionHint_100" Source="Images/Numbers/kh2/Yellow/QuestionMark.png" Visibility="Hidden" Grid.Column="1"/>
                                <Image Name="HollowBastionHint_010" Source="Images/Numbers/kh2/Yellow/QuestionMark.png" Visibility="Hidden" Grid.Column="2"/>
                                <Image Name="HollowBastionHint_001" Source="Images/Numbers/kh2/Yellow/QuestionMark.png" Visibility="Visible" Grid.Column="3"/>
                            </Grid>

                            <ContentControl Name="HollowBastionProgression" IsHitTestVisible="False" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"/>

                            <Grid Name="HollowBastionPath" Grid.RowSpan="2" Grid.Column="3" Visibility="Hidden">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.18*"/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition Height="0.18*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <Image Name="HollowBastionPath_Con" Source="Images/Checks/Simple/proof_of_connection.png"      Visibility="Visible" Grid.Row="1" VerticalAlignment="Bottom"/>
                                <Image Name="HollowBastionPath_Non" Source="Images/Checks/Simple/proof_of_nonexistence.png"    Visibility="Visible" Grid.Row="2"/>
                                <Image Name="HollowBastionPath_Pea" Source="Images/Checks/Simple/proof_of_tranquility.png"     Visibility="Visible" Grid.Row="3" VerticalAlignment="Top"/>
                            </Grid>

                            <Image Name="HollowBastionBar" Source="Images\VerticalBarWhite.png" Grid.RowSpan="2" Grid.Column="4"/>
                        </Grid>
                        <local:WorldGrid x:Name="HollowBastionGrid" Grid.Column="1"/>
                    </Grid>

                    <!-- Olympus Coliseum -->
                    <Grid Name="OlympusColiseumTop" Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="3.3*"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3.5*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width=".1*"/>
                                <ColumnDefinition Width=".3*"/>
                            </Grid.ColumnDefinitions>

                            <Image Name="OlympusColiseumLock" Source="Images/Other/visitlock.png" Grid.RowSpan="2" Grid.ColumnSpan="2" Panel.ZIndex="1" RenderTransformOrigin="0.5,0.5" IsHitTestVisible="False">
                                <Image.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Image.RenderTransform>
                            </Image>

                            <Button Name="OlympusColiseum" Background="Transparent" PreviewMouseDown="OnMouseDown" MouseWheel="OnMouseWheel" Template="{StaticResource DefaultButton}" FocusVisualStyle="{x:Null}" Grid.RowSpan="2" Grid.ColumnSpan="2">
                                <DynamicResource ResourceKey="Min-OlympusImage"/>
                            </Button>

                            <Image Name="OlympusColiseumCross" Source="Images/Other/crossworld.png" Grid.RowSpan="2" Grid.ColumnSpan="2" Visibility="Collapsed" IsHitTestVisible="False"/>
                            
                            <Grid Name="OlympusColiseumHint" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Panel.ZIndex="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.25*"/>
